@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center">
    <div class="w-25 p-3 bg-dark border rounded">
        <h1 class="text-white">Results</h1>
        <a href="/" class="btn text-white border border-white mb-3">Go Back</a>
        <div class="bg-white border border-dark rounded">
            <h2 class="ms-3">Info</h2>
            <div class="d-flex justify-content-between w-75 ms-5">
                <p>Name:</p>
                <p>@Model.Name</p>
            </div>
            <div class="d-flex justify-content-between w-75 ms-5">
                <p>Location:</p>
                <p>@Model.Location</p>
            </div>
            <div class="d-flex justify-content-between w-75 ms-5">
                <p>Language:</p>
                <p>@Model.Language</p>
            </div>
            <div class="d-flex justify-content-between w-75 ms-5">
                <p>Comment:</p>
                <p>@Model.Comment</p>
            </div>
        </div>
    </div>
</div>
